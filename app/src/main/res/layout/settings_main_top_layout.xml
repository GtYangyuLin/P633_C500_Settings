<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_portrait_top"
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:visibility="visible" />

        <com.gomtel.settings.util.CircleImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="128px"
            android:layout_height="128px"
            android:src="@drawable/head_portrait" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:text="Eiffel"
            android:textColor="@color/colorName"
            android:textSize="28px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16px" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:text="18513146145"
            android:textColor="@color/colorWord"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/iv_head_portrait_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>